<h1>Users</h1>

<div id="all-users">
  <% @users.each do |user| %>
    <h2><%= link_to user.name, user %></h2>
    <%= link_to "Edit", edit_user_path(user) %>
    <%= link_to "Delete", user, method: :delete, data: {confirm: "Are you sure?" } %>
  <% end %>
</div>

<div class="users-options">
  <%= link_to "New User", new_user_path %>
</div>
