<div class="container" id="all-users">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <h1>Users</h1>
    </div>
  </div>
  <div>
    <% @users.each do |user| %>
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3 individual_user">
          <h2><%= link_to user.name, user %></h2>
          <%= link_to "Edit", edit_user_path(user) %>
          <%= link_to "Delete", user, method: :delete, data: {confirm: "Are you sure?" } %>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <div class="users-options">
        <%= link_to "New User", new_user_path %>
      </div>
    </div>
  </div>
</div>
