<h1>Users</h1>

<div id="all-users">
  <% @users.each do |user| %>
    <h2><%= user.name %></h2>
    <%= link_to "View", user %>
    <%= link_to "Delete", user, method: :delete, data: {confirm: "Are you sure?" } %>
  <% end %>
</div>

<div id="users-options">
  <%= link_to "New User", new_user_path %>
</div>
